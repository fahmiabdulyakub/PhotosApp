{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@constants": ["./src/constants"],
      "@screens": ["./src/screens"],
      "@types/*": ["./src/types/*"],
      "@utils/*": ["./src/utils/*"],
      "@services/*": ["./src/services/*"],
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
}
